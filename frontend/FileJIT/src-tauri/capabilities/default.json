{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "upload:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-read-dir",
    "fs:allow-write-file",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-appdata-read-recursive",
    "fs:allow-appdata-write-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "/*"
        }
      ]
    }
  ]
}